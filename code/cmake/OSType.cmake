IF (UNIX)
    EXEC_PROGRAM(uname OUTPUT_VARIABLE SYSTEM_NAME)
    SET (OS_TYPE ${SYSTEM_NAME})
    IF (${SYSTEM_NAME} STREQUAL "Linux")
        SET (LINUX TRUE)
    ELSE ()
        SET (BSD TRUE)
    ENDIF ()

    EXEC_PROGRAM(uname ARGS -a OUTPUT_VARIABLE SYSTEM_FULL_NAME)
    STRING(REGEX MATCH "(Debian)" OS_FLAVOUR "${SYSTEM_FULL_NAME}")
ELSE ()
    SET (OS_TYPE "Windows")
ENDIF ()

IF (OS_FLAVOUR)
    MESSAGE ("OS Flavour:         ${OS_TYPE} (${OS_FLAVOUR})")
ELSE ()
    MESSAGE ("OS Type:            ${OS_TYPE}")
ENDIF ()